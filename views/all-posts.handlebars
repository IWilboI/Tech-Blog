<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/style.css">
    <title>All Posts</title>
</head>
<body>
    <h1>Blog Posts</h1>
    <div id="posts">
        {{#each posts}}
            <div class="post">
                <h2>{{this.title}}</h2>
                <p>{{this.content}}</p>
                <button data-id="{{this.id}}" class="delete-post">Delete</button>
                <button data-id="{{this.id}}" class="edit-post">Edit</button>
            </div>
        {{/each}}
    </div>
    <script src="/public/script.js"></script>
</body>
</html>
