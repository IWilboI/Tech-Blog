{{> header}}
<main>
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <h3>Comments</h3>
    <ul>
        {{#each comments}}
            <li>{{this.content}}</li>
        {{/each}}
    </ul>
    <form action="/api/blogs/post/{{post.id}}/comment" method="POST">
        <textarea name="content" placeholder="Add a comment" required></textarea>
        <button type="submit">Comment</button>
    </form>
</main>
{{> footer}}
